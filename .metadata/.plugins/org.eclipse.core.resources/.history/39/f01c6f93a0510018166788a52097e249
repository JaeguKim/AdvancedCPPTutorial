#include <iostream>
using namespace std;

class Test {
private:
	int id;
	string name;

public:
	Test():id(0), name(""){

	}

	Test(int id, string name):id(id), name(name){

	}

	void print(){
		cout << id << ": " << name;
	}

	const Test &operator=(const Test &other) {

		cout << "Assignment running" << endl;
		id = other.id;
		name = other.name;
		return *this;
	}

};

int main() {
	Test test1(10, "Mike");
	cout << "Print test1" << flush;
	test1.print();

	Test test2(20, "Bob");

	test2 = test1;
	test2.print();

	Test test3;
	//test3 = test2 = test1;

	//test3 = test2;
	test3.operator=(test2);
	test3.print();


	return 0;
}
